<%= turbo_frame_tag dom_id(@post) do %>
  <h3> Edit post </h3>
  <div class="card my-4">
    <div class="card-body">
      <h4 class="card-title">
        <%= @post.user.username %>
      </h4>
      <h6 class="card-subtitle">
        Posted: <%= time_ago_in_words(@post.created_at) %> ago
      </h6>
      <p class="card-text">
        <%= @post.body %>
      </p>
      <%= render("form", post: @post)%>
      <%= link_to 'Back', discussion_post_path(@post.discussion, @post) %>
    </div>
  </div>
<% end %>